#!/bin/sh
#
# Pre-commit hook for skia-rs
# Runs formatting checks and clippy before allowing commits
#

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if there are any staged Rust files
STAGED_RS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -z "$STAGED_RS_FILES" ]; then
    echo "âœ… No Rust files staged, skipping checks"
    exit 0
fi

echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo ""
    echo "âŒ Code formatting check failed!"
    echo "   Run 'cargo fmt --all' to fix formatting issues"
    exit 1
fi
echo "âœ… Formatting OK"

echo ""
echo "ğŸ” Running Clippy..."
if ! cargo clippy --workspace --all-targets -- -D warnings; then
    echo ""
    echo "âŒ Clippy found issues!"
    echo "   Fix the warnings above before committing"
    exit 1
fi
echo "âœ… Clippy OK"

echo ""
echo "ğŸ§ª Running quick compile check..."
if ! cargo check --workspace; then
    echo ""
    echo "âŒ Compilation failed!"
    exit 1
fi
echo "âœ… Compilation OK"

echo ""
echo "âœ¨ All pre-commit checks passed!"
